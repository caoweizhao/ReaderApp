<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="120dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/pic"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="书友2278795692"
                    />
            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#55cccccc"
            android:orientation="vertical">

            <!--最近阅读-->
            <TextView
                android:id="@+id/recent_reading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/self_page_text_padding_vertical"
                android:paddingLeft="@dimen/self_page_text_padding_left"
                android:paddingTop="@dimen/self_page_text_padding_vertical"
                android:text="最近阅读"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/self_page_text_size"
                />

            <include layout="@layout/divider_view"/>

            <!--主题设置-->
            <TextView
                android:id="@+id/theme_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/self_page_text_padding_vertical"
                android:paddingLeft="@dimen/self_page_text_padding_left"
                android:paddingTop="@dimen/self_page_text_padding_vertical"
                android:text="主题设置"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/self_page_text_size"
                />

            <include layout="@layout/divider_view"/>

            <!--下载管理-->
            <TextView
                android:id="@+id/download_management"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/self_page_text_padding_vertical"
                android:paddingLeft="@dimen/self_page_text_padding_left"
                android:paddingTop="@dimen/self_page_text_padding_vertical"
                android:text="下载管理"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/self_page_text_size"

                />

            <include layout="@layout/divider_view"/>

            <!--本地文件-->
            <TextView
                android:id="@+id/local_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/self_page_text_padding_vertical"
                android:paddingLeft="@dimen/self_page_text_padding_left"
                android:paddingTop="@dimen/self_page_text_padding_vertical"
                android:text="本地文件"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/self_page_text_size"

                />

            <include layout="@layout/divider_view"/>

            <!--清除缓存-->
            <LinearLayout
                android:id="@+id/clear_cache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:paddingBottom="@dimen/self_page_text_padding_vertical"
                    android:paddingLeft="@dimen/self_page_text_padding_left"
                    android:paddingTop="@dimen/self_page_text_padding_vertical"
                    android:text="清除缓存"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="@dimen/self_page_text_size"

                    />

                <TextView
                    android:id="@+id/cache_size_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/self_page_text_padding_vertical"
                    android:paddingTop="@dimen/self_page_text_padding_vertical"
                    android:textColor="?android:attr/textColorPrimary"
                    tools:text="1.9M"

                    />
            </LinearLayout>

            <include layout="@layout/divider_view"/>

            <!--功能说明-->
            <TextView
                android:id="@+id/functions_introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/self_page_text_padding_vertical"
                android:paddingLeft="@dimen/self_page_text_padding_left"
                android:paddingTop="@dimen/self_page_text_padding_vertical"
                android:text="功能说明"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/self_page_text_size"

                />

            <include layout="@layout/divider_view"/>

            <!--关于应用-->
            <TextView
                android:id="@+id/about_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/self_page_text_padding_vertical"
                android:paddingLeft="@dimen/self_page_text_padding_left"
                android:paddingTop="@dimen/self_page_text_padding_vertical"
                android:text="关于Reader"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/self_page_text_size"

                />

            <include layout="@layout/divider_view"/>

            <!--意见反馈-->
            <TextView
                android:id="@+id/feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/self_page_text_padding_vertical"
                android:paddingLeft="@dimen/self_page_text_padding_left"
                android:paddingTop="@dimen/self_page_text_padding_vertical"
                android:text="邮件反馈"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="@dimen/self_page_text_size"

                />

            <include layout="@layout/divider_view"/>

            <!--切换账号-->
            <TextView
                android:id="@+id/switch_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/self_page_text_padding_vertical"
                android:paddingLeft="@dimen/self_page_text_padding_left"
                android:paddingTop="@dimen/self_page_text_padding_vertical"
                android:text="切换账号"
                android:textSize="@dimen/self_page_text_size"
                />

            <include layout="@layout/divider_view"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
