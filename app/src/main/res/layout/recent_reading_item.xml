<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="120dp"
              android:orientation="horizontal"
              android:padding="12dp"

    >

    <ImageView
        android:id="@+id/recent_reading_item_img"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="12dp"
        android:layout_weight="1"
        tools:src="@drawable/pic"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recent_reading_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/recent_reading_item_text_padding"
                android:text="Android"
                android:textColor="?android:attr/textColorSecondary"
                />

            <TextView
                android:id="@+id/recent_reading_item_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/recent_reading_item_text_padding"
                android:text="阅读至23%"
                android:textColor="?android:attr/textColorSecondary"/>

            <TextView
                android:id="@+id/recent_reading_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/recent_reading_item_text_padding"
                android:text="2018-1-13 12:30"
                android:textColor="?android:attr/textColorSecondary"/>

        </LinearLayout>

        <include layout="@layout/divider_view"/>

    </LinearLayout>
</LinearLayout>